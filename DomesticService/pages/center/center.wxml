<view class="container bgcolor">
    <view class="header">
        <image src="{{thumb}}" class="thumb"></image>
        <text class="nickname">{{nickname}}</text>
    </view>
  <view class="weui-panel shadow">
      <!-- <view class="weui-panel__hd"></view> -->
      <view class="weui-panel__bd">
          <view class="weui-media-box weui-media-box_small-appmsg">
              <view class="weui-cells weui-cells_in-small-appmsg">
                  <navigator url="../center/task/task" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                      <view class="weui-cell__hd center"><image src="/images/3.png" style="width: 20px;height: 20px;margin-right:5px;margin-left: 5px" /></view>
                      <view class="weui-cell__bd weui-cell_primary">
                          <view style='font-size: 30rpx;'>我的任务</view>
                      </view>
                      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                  </navigator>
                  <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                      <view class="weui-cell__hd"><image src="/images/4.png" style="width: 20px;height: 20px;margin-right:5px;margin-left: 5px;" /></view>
                      <view class="weui-cell__bd weui-cell_primary">
                          <view style='font-size: 30rpx;'>我的订单</view>
                      </view>
                      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                  </navigator>
                  <navigator url="../center/notice/notice" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                      <view class="weui-cell__hd"><image src="/images/2.png" style="width: 20px;height: 20px;margin-right:5px;margin-left: 5px;" /></view>
                      <view class="weui-cell__bd weui-cell_primary">
                          <view style='font-size: 30rpx;'>平台使用须知</view>
                      </view>
                      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                  </navigator>
              </view>
          </view>
      </view>
  </view>
</view>